<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.buddy.profile_overview"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FEFAF5">


    <TextView
        android:id="@+id/profilebackground"
        android:layout_width="wrap_content"
        android:layout_height="597dp"
        android:layout_below="@id/prf"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="-350dp"
        android:layout_marginEnd="-1dp"
        android:background="@drawable/profilebackground" />

    <TextView
        android:id="@+id/profileicon2"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_below="@id/prf"
        android:layout_alignTop="@+id/cardview"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="25dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/profile"
        android:elevation="11dp" />

    <Button
        android:id="@+id/camera"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="25dp"
        android:layout_marginTop="210dp"
        android:layout_marginBottom="85dp"
        android:layout_marginEnd="25dp"
        android:background="@drawable/camicon" />

    <Button
        android:id="@+id/homepage"
        android:layout_width="45dp"
        android:layout_height="35dp"
        android:layout_alignBottom="@+id/navbar"
        android:layout_marginBottom="30dp"
        android:layout_alignStart="@+id/navbar"
        android:layout_marginEnd="25dp"
        android:layout_marginStart="20dp"
        android:background="@drawable/homepage2" />
    <Button
        android:id="@+id/calendar"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignStart="@+id/homepage"
        android:layout_alignBottom="@+id/navbar"
        android:layout_marginBottom="30dp"
        android:layout_marginStart="70dp"
        android:layout_marginEnd="25dp"
        android:background="@drawable/calendar_page3" />
    <Button
        android:id="@+id/healthtools"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignBottom="@+id/navbar"
        android:layout_alignEnd="@+id/profile"
        android:layout_marginBottom="30dp"
        android:layout_marginEnd="65dp"
        android:background="@drawable/health2" />
    <Button
        android:id="@+id/profile"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignBottom="@+id/navbar"
        android:layout_alignEnd="@+id/navbar"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/profile_page2" />

    <Button
        android:id="@+id/navbar"
        android:layout_width="353dp"
        android:layout_height="92dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="25dp"
        android:layout_marginTop="267dp"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="25dp"
        android:background="@drawable/navbar"
        android:enabled="false" />
    <TextView
        android:id="@+id/prf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="150dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:fontFamily="@font/featherbold"
        android:text="PROFILE"
        android:elevation="20dp"
        android:textColor="#FFFFFF"
        android:textSize="25dp" />

    <TextView
        android:id="@+id/nckname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profileicon2"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="150dp"
        android:layout_marginTop="15dp"
        android:elevation="11dp"
        android:fontFamily="@font/featherbold"
        android:gravity="center"
        android:text="Nickname"
        android:textColor="#D9CCBC"
        android:textSize="25dp" />

    <TextView
        android:id="@+id/usrnm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/cardview"
        android:layout_alignStart="@+id/cardview"
        android:layout_marginTop="0dp"
        android:gravity="center"
        android:layout_below="@+id/nckname"
        android:fontFamily="@font/featherbold"
        android:text="Profile Name:"
        android:textColor="#D9CCBC"
        android:layout_centerHorizontal="true"
        android:elevation="11dp"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/uid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/cardview"
        android:layout_alignEnd="@+id/cardview"
        android:layout_marginTop="0dp"
        android:layout_below="@+id/usrnm"
        android:fontFamily="@font/featherbold"
        android:textColor="#D9CCBC"
        android:text="UID: "
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:elevation="11dp"
        android:textSize="12dp" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardview"
        android:layout_width="350dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/prf"
        android:layout_marginTop="50dp"
        app:cardElevation="10dp"
        app:cardCornerRadius="20dp"
        app:cardBackgroundColor="#FEFAF5"/>

    <TextView
        android:id="@+id/tab"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignStart="@+id/cardview1"
       android:layout_alignTop="@+id/cardview1"
        android:layout_marginStart="25dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/phone"
        android:elevation="11dp" />

    <TextView
        android:id="@+id/nmbr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="18dp"
        android:layout_toEndOf="@+id/tab"
        android:maxLines="1"
        android:layout_alignEnd="@+id/cardview1"
        android:layout_alignTop="@+id/cardview1"
        android:layout_below="@+id/cardview"
        android:fontFamily="@font/featherbold"
        android:textColor="#D9CCBC"
        android:text="+ 63"
        android:elevation="11dp"
        android:textSize="17dp" />

    <TextView
        android:id="@+id/tab2"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_below="@id/tab"
        android:layout_alignStart="@+id/cardview1"
        android:layout_marginStart="25dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/mailicon"
        android:elevation="11dp" />

    <TextView
        android:id="@+id/eml"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="31dp"
        android:layout_marginEnd="0dp"
        android:layout_marginStart="10dp"
        android:maxLines="1"
        android:layout_toEndOf="@+id/tab2"
        android:layout_alignEnd="@+id/cardview1"
        android:layout_below="@+id/nmbr"
        android:fontFamily="@font/featherbold"
        android:textColor="#574C3B"
        android:text="buddyapp@gmail.com"
        android:elevation="11dp"
        android:textSize="15dp" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardview1"
        android:layout_width="350dp"
        android:layout_height="110dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/cardview"
        android:layout_marginTop="30dp"
        app:cardElevation="10dp"
        app:cardCornerRadius="20dp"
        app:cardBackgroundColor="#FEFAF5"/>

    <Button
        android:id="@+id/profile_settings_button"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignTop="@+id/profiesettings"
        android:layout_alignEnd="@+id/profiesettings"
        android:layout_alignBottom="@+id/profiesettings"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="29dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/arrow_right" />

    <TextView
        android:id="@+id/profiesettings"
        android:layout_width="370dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cardview1"
        android:layout_marginStart="35dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="30dp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:background="@drawable/roundedplainbrown"
        android:drawablePadding="10dp"
        android:fontFamily="@font/featherbold"
        android:padding="20dp"
        android:text="Profile Settings"
        android:textColor="#574C3B"
        android:textSize="20dp" />

</RelativeLayout>