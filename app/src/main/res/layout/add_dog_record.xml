<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.buddy.add_dog_record"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D8CCBC">

    <Button
        android:id="@+id/backbtn"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="25dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/white_arrow" />

    <Button
        android:id="@+id/button_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="40dp"
        android:background="#00000000"
        android:fontFamily="@font/normal"
        android:text="SAVE"
        android:textColor="#FFFFFF"
        android:textSize="20sp"/>

    <EditText
        android:id="@+id/add_description"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="35dp"
        android:layout_marginTop="155dp"
        android:layout_marginEnd="30dp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:background="@drawable/roundedplain"
        android:drawablePadding="10dp"
        android:fontFamily="@font/featherbold"
        android:hint="Description"
        android:padding="18dp"
        android:textColor="#5D523B"
        android:textColorHint="#D9CCBC" />

    <TextView
        android:id="@+id/add_date"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="35dp"
        android:layout_below="@+id/add_description"
        android:layout_marginTop="-10dp"
        android:layout_marginEnd="30dp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:background="@drawable/roundedplain"
        android:drawablePadding="10dp"
        android:fontFamily="@font/featherbold"
        android:hint="Date"
        android:padding="18dp"
        android:textSize="18sp"
        android:textColor="#5D523B"
        android:textColorHint="#D9CCBC" />

    <EditText
        android:id="@+id/add_veterinarian"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="35dp"
        android:layout_below="@+id/add_date"
        android:layout_marginTop="-10dp"
        android:layout_marginEnd="30dp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:background="@drawable/roundedplain"
        android:drawablePadding="10dp"
        android:fontFamily="@font/featherbold"
        android:hint="Veterinarian"
        android:padding="18dp"
        android:textColor="#5D523B"
        android:textColorHint="#D9CCBC" />

    <EditText
        android:id="@+id/add_diagnosis"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="35dp"
        android:layout_below="@+id/add_veterinarian"
        android:layout_marginTop="-10dp"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/roundedplain"
        android:drawablePadding="10dp"
        android:fontFamily="@font/featherbold"
        android:hint="Diagnosis"
        android:padding="18dp"
        android:textColor="#5D523B"
        android:textColorHint="#D9CCBC" />



</RelativeLayout>