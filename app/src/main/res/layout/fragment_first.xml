<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FirstFragment"
    android:background="#00000000"
    android:theme="@style/Theme.AppCompat.Light.NoActionBar">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never"
        android:scrollbars="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <TextView
        android:id="@+id/breedtext"
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="30dp"
        android:fontFamily="@font/normal"
        android:text="Breed"
        android:textStyle="bold"
        android:textColor="#584E3D"
        android:textSize="21sp" />


    <TextView
        android:id="@+id/gretrievertxt"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="15dp"
        android:layout_marginStart="20dp"
        android:layout_below="@+id/breedtext"
        android:background="@drawable/golden2_btn"
        android:textColor="@color/black"
        android:textSize="24sp" />

    <Button
        android:id="@+id/gretrieverbtn"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="15dp"
        android:layout_marginStart="20dp"
        android:layout_below="@+id/breedtext"
        android:background="#00000000"
        android:textColor="@color/black"
        android:textSize="24sp" />


    <TextView
        android:id="@+id/chihuahuatxt"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="15dp"
        android:layout_marginStart="145dp"
        android:layout_below="@+id/breedtext"
        android:background="@drawable/chiuahua1"
        android:textColor="@color/black"
        android:textSize="24sp" />
    <Button
        android:id="@+id/chihuahuabtn"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="15dp"
        android:layout_marginStart="145dp"
        android:layout_below="@+id/breedtext"
        android:background="#00000000"
        android:textColor="@color/black"
        android:textSize="24sp" />


    <TextView
        android:id="@+id/poodletxt"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="15dp"
        android:layout_marginStart="270dp"
        android:layout_below="@+id/breedtext"
        android:background="@drawable/poodle1"
        android:contentDescription="awhabhas"
        android:textColor="@color/black"
        android:textSize="24sp" />
    <Button
        android:id="@+id/poodlebtn"
        android:layout_width="120dp"
        android:layout_height="120dp"

        android:layout_marginTop="15dp"
        android:layout_marginStart="270dp"
        android:layout_below="@+id/breedtext"
        android:background="#00000000"
        android:textColor="@color/black"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/shihtzutxt"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="15dp"
        android:layout_marginStart="20dp"
        android:layout_below="@+id/gretrieverbtn"
        android:background="@drawable/shihtzudark"
        android:contentDescription="awhabhas"
        android:textColor="@color/black"
        android:textSize="24sp" />

    <Button
        android:id="@+id/shihtzubtn"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="15dp"
        android:layout_marginStart="20dp"
        android:layout_below="@+id/gretrieverbtn"
        android:background="#00000000"
        android:textColor="@color/black"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/pomaraniantxt"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="15dp"
        android:layout_marginStart="145dp"
        android:layout_below="@+id/chihuahuabtn"
        android:background="@drawable/pomerenian1"
        android:contentDescription="awhabhas"
        android:textColor="@color/black"
        android:textSize="24sp" />
    <Button
        android:id="@+id/pomeranianbtn"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="15dp"
        android:layout_marginStart="145dp"
        android:layout_below="@+id/chihuahuabtn"
        android:background="#00000000"
        android:textSize="24sp" />
    </RelativeLayout>
    </ScrollView>
</LinearLayout>