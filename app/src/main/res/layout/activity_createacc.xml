<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/gradientbg"
    tools:context=".CreateaccActivity">

    <Button
        android:id="@+id/backbtn"
        android:layout_width="25dp"
        android:layout_height="20dp"
        android:layout_marginStart="25dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="50dp"
        android:background="@drawable/arrow" />
    <LinearLayout
        android:layout_width="370dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/linear"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView
                android:id="@+id/signin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/name"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="9dp"
                android:fontFamily="@font/featherbold"
                android:gravity="center"
                android:text="Create Account"
                android:textColor="#4B4B4B"
                android:textSize="24dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/name"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_above="@id/email"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="14dp"
                android:background="@drawable/rounded"
                android:drawablePadding="10dp"
                android:fontFamily="@font/featherbold"
                android:hint="Name"
                android:maxLines="1"
                android:padding="18dp"
                android:textColor="#B1B1B1"
                android:textColorHint="#AFAFAF"
                android:textSize="21dp" />

            <TextView
                android:id="@+id/warningicon"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignTop="@+id/name"
                android:layout_alignEnd="@+id/name"
                android:layout_alignBottom="@+id/name"
                android:layout_marginStart="210dp"
                android:layout_marginTop="18dp"
                android:layout_marginEnd="25dp"
                android:layout_marginBottom="18dp"
                android:background="@drawable/warning"
                android:visibility="invisible" />

            <EditText
                android:id="@+id/email"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_above="@id/password"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/rounded"
                android:drawablePadding="10dp"
                android:fontFamily="@font/featherbold"
                android:hint="Email"
                android:maxLines="1"
                android:padding="18dp"
                android:textColor="#B1B1B1"
                android:textColorHint="#AFAFAF"
                android:textSize="21dp" />

            <TextView
                android:id="@+id/warningcon2"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignTop="@+id/email"
                android:layout_alignEnd="@+id/email"
                android:layout_alignBottom="@+id/email"
                android:layout_marginStart="200dp"
                android:layout_marginTop="18dp"
                android:layout_marginEnd="25dp"
                android:layout_marginBottom="18dp"
                android:background="@drawable/warning"
                android:visibility="invisible" />

            <Button
                android:id="@+id/eye"
                android:layout_width="35dp"
                android:layout_height="25dp"
                android:layout_alignTop="@+id/password"
                android:layout_alignEnd="@+id/password"
                android:layout_alignBottom="@+id/password"
                android:layout_marginTop="17dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/eyecancel"
                android:elevation="1dp" />

            <Button
                android:id="@+id/eye2"
                android:layout_width="35dp"
                android:layout_height="25dp"
                android:layout_alignTop="@+id/confirmpassword"
                android:layout_alignEnd="@+id/confirmpassword"
                android:layout_alignBottom="@+id/confirmpassword"
                android:layout_marginStart="200dp"
                android:layout_marginTop="17dp"
                android:layout_marginBottom="20dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/eyecancel"
                android:elevation="2dp" />

            <Button
                android:id="@+id/createaccount"
                android:layout_width="340dp"
                android:layout_height="53dp"
                android:layout_above="@+id/terms"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="15dp"
                android:background="@drawable/create_account_btn"
                android:fontFamily="@font/normal"
                android:textColor="#DDD0BD"
                android:textSize="20dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/password"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_above="@+id/confirmpassword"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="-10dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/rounded"
                android:drawablePadding="10dp"
                android:fontFamily="@font/featherbold"
                android:hint="Password"
                android:inputType="textPassword"
                android:maxLines="1"
                android:padding="18dp"
                android:textColor="#B1B1B1"
                android:textColorHint="#AFAFAF"
                android:textSize="21dp" />

            <TextView
                android:id="@+id/warningcon3"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignTop="@+id/password"
                android:layout_alignEnd="@+id/password"
                android:layout_alignBottom="@+id/password"
                android:layout_marginTop="18dp"
                android:layout_marginEnd="60dp"
                android:layout_marginBottom="18dp"
                android:background="@drawable/warning"
                android:visibility="invisible" />

            <EditText
                android:id="@+id/confirmpassword"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_above="@id/createaccount"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="-10dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/rounded"
                android:drawablePadding="10dp"
                android:fontFamily="@font/featherbold"
                android:hint="Confirm Password"
                android:inputType="textPassword"
                android:maxLines="1"
                android:padding="18dp"
                android:textColor="#B1B1B1"
                android:textColorHint="#AFAFAF"
                android:textSize="21dp" />


            <TextView
                android:id="@+id/warningcon4"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignTop="@+id/confirmpassword"
                android:layout_alignEnd="@+id/confirmpassword"
                android:layout_alignBottom="@+id/confirmpassword"
                android:layout_marginTop="18dp"
                android:layout_marginEnd="60dp"
                android:layout_marginBottom="18dp"
                android:background="@drawable/warning"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/terms"
                android:layout_width="330dp"
                android:layout_height="wrap_content"
                android:layout_above="@+id/account"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="-640dp"
                android:fontFamily="@font/featherbold"
                android:text="By signing in to this app, you agree to our Terms and  Privacy Policy."
                android:textAlignment="center"
                android:textColor="#6A6661"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="650dp"
                android:layout_marginStart="40dp"
                android:layout_alignStart="@+id/terms"
                android:layout_marginBottom="20dp"
                android:fontFamily="@font/featherbold"
                android:text="You already have an account?"
                android:textAlignment="center"
                android:textColor="#6A6661"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/account2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="650dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="17dp"
                android:layout_toEndOf="@+id/account"
                android:fontFamily="@font/featherbold"
                android:gravity="start"
                android:text="LOG IN"
                android:textColor="#A49175"
                android:textSize="15sp"
                android:textStyle="bold" />
        </RelativeLayout>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>