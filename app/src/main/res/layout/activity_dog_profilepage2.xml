<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.buddy.dog_profilepageold"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FEFAF5">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never"
        android:scrollbars="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/bg"
                android:layout_width="match_parent"
                android:layout_height="274dp"
                android:background="#D9CCBC" />

            <Button
                android:id="@+id/backbtn"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="50dp"
                android:background="@drawable/white_arrow" />

            <Button
                android:id="@+id/stngs"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="35dp"
                android:layout_marginTop="43dp"
                android:background="@drawable/settings_icon" />

            <TextView
                android:id="@+id/bi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/bg"
                android:layout_marginStart="30dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="60dp"
                android:elevation="2dp"
                android:fontFamily="@font/featherbold"
                android:text="Basic Information"
                android:textColor="#584E3D"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/buddyicon"
                android:layout_width="26dp"
                android:layout_height="24dp"
                android:layout_alignTop="@+id/dog_buddyname"
                android:layout_marginStart="70dp"
                android:layout_marginTop="6dp"
                android:layout_marginEnd="60dp"
                android:background="@drawable/name_icon"
                android:elevation="2dp" />

            <TextView
                android:id="@+id/dog_buddy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/dog_buddyname"
                android:layout_marginStart="110dp"
                android:layout_marginTop="1dp"
                android:layout_marginEnd="60dp"
                android:elevation="2dp"
                android:fontFamily="@font/featherbold"
                android:text="Name"
                android:textColor="#584E3D"
                android:textSize="10dp" />

            <TextView
                android:id="@+id/dog_buddyname"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/bi"
                android:layout_marginStart="110dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="60dp"
                android:elevation="2dp"
                android:fontFamily="@font/featherbold"
                android:text="N/A"
                android:textColor="#584E3D"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/sexicon"
                android:layout_width="26dp"
                android:layout_height="24dp"
                android:layout_alignTop="@id/dog_sexname"
                android:layout_marginStart="70dp"
                android:layout_marginTop="6dp"
                android:layout_marginEnd="60dp"
                android:background="@drawable/sex_icon"
                android:elevation="2dp" />

            <TextView
                android:id="@+id/dog_sexname"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/dog_buddyname"
                android:layout_marginStart="110dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="60dp"
                android:elevation="2dp"
                android:fontFamily="@font/featherbold"
                android:text="N/A"
                android:textColor="#584E3D"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/dog_sex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/dog_sexname"
                android:layout_marginStart="110dp"
                android:layout_marginTop="1dp"
                android:layout_marginEnd="60dp"
                android:elevation="2dp"
                android:fontFamily="@font/featherbold"
                android:text="Sex"
                android:textColor="#584E3D"
                android:textSize="10dp" />

            <TextView
                android:id="@+id/weighticon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_below="@+id/dog_weightname"
                android:layout_marginStart="70dp"
                android:layout_marginTop="-12dp"
                android:layout_marginEnd="60dp"
                android:background="@drawable/weight_icon"
                android:elevation="2dp" />

            <TextView
                android:id="@+id/dog_weightname"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/dog_sexname"
                android:layout_marginStart="110dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="60dp"
                android:elevation="2dp"
                android:fontFamily="@font/featherbold"
                android:text="N/A"
                android:textColor="#584E3D"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/dog_weight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/dog_weightname"
                android:layout_marginStart="110dp"
                android:layout_marginTop="1dp"
                android:layout_marginEnd="60dp"
                android:elevation="2dp"
                android:fontFamily="@font/featherbold"
                android:text="Weight (lbs)"
                android:textColor="#584E3D"
                android:textSize="10dp" />

            <TextView
                android:id="@+id/bdayicon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_below="@+id/dog_bdayname"
                android:layout_marginStart="215dp"
                android:layout_marginTop="-14dp"
                android:layout_marginEnd="60dp"
                android:background="@drawable/bday_icon"
                android:elevation="2dp" />

            <TextView
                android:id="@+id/dog_bday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/dog_bdayname"
                android:layout_marginStart="250dp"
                android:layout_marginTop="1dp"
                android:layout_marginEnd="60dp"
                android:elevation="2dp"
                android:fontFamily="@font/featherbold"
                android:text="Birthdate"
                android:textColor="#584E3D"
                android:textSize="10dp" />

            <TextView
                android:id="@+id/dog_bdayname"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/bi"
                android:layout_alignBaseline="@+id/dog_buddyname"
                android:layout_marginStart="250dp"
                android:layout_marginTop="210dp"
                android:layout_marginEnd="60dp"
                android:elevation="2dp"
                android:fontFamily="@font/featherbold"
                android:text="N/A"
                android:textColor="#584E3D"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/dog_ageicon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_below="@+id/dog_agename"
                android:layout_marginStart="215dp"
                android:layout_marginTop="-12dp"
                android:layout_marginEnd="60dp"
                android:background="@drawable/age_icon"
                android:elevation="2dp" />

            <TextView
                android:id="@+id/dog_age"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/dog_agename"
                android:layout_marginStart="250dp"
                android:layout_marginTop="1dp"
                android:layout_marginEnd="60dp"
                android:elevation="2dp"
                android:fontFamily="@font/featherbold"
                android:text="Age"
                android:textColor="#584E3D"
                android:textSize="10dp" />

            <TextView
                android:id="@+id/dog_agename"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/dog_breedname"
                android:layout_marginStart="250dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="60dp"
                android:elevation="2dp"
                android:fontFamily="@font/featherbold"
                android:text="N/A"
                android:textColor="#584E3D"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/dogicon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_below="@+id/dog_breedname"
                android:layout_marginStart="215dp"
                android:layout_marginTop="-12dp"
                android:layout_marginEnd="60dp"
                android:background="@drawable/breed_icon"
                android:elevation="2dp" />

            <TextView
                android:id="@+id/dog_breed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/dog_breedname"
                android:layout_marginStart="250dp"
                android:layout_marginTop="1dp"
                android:layout_marginEnd="60dp"
                android:elevation="2dp"
                android:fontFamily="@font/featherbold"
                android:text="Breed"
                android:textColor="#584E3D"
                android:textSize="10dp" />

            <TextView
                android:id="@+id/dog_breedname"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/dog_bdayname"
                android:layout_marginStart="250dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="60dp"
                android:elevation="2dp"
                android:fontFamily="@font/featherbold"
                android:text="N/A"
                android:textColor="#584E3D"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/puppy"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:layout_alignTop="@+id/bg"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="120dp"
                android:layout_marginTop="94dp"
                android:layout_marginBottom="2dp"/>

            <View
                android:id="@+id/line"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:layout_below="@+id/dog_weight"
                android:layout_marginTop="20dp"
                android:background="#D9CCBC" />

            <TextView
                android:id="@+id/dog_records"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/line"
                android:layout_marginStart="30dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="60dp"
                android:elevation="2dp"
                android:fontFamily="@font/featherbold"
                android:text="Dog Records"
                android:textColor="#584E3D"
                android:textSize="20sp" />

            <Button
                android:id="@+id/btn_viewall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/line"
                android:layout_marginTop="11dp"
                android:layout_marginEnd="30dp"
                android:layout_alignParentEnd="true"
                android:background="#00000000"
                android:fontFamily="@font/featherbold"
                android:text="View All"
                android:textColor="#9B8768"
                android:textSize="15sp" />


            <TableLayout
                android:id="@+id/tblayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/dog_records"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="25dp"
                android:background="@drawable/tableoutline">


                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@drawable/tabcorneright">

                    <TextView
                        android:id="@+id/date"
                        android:layout_width="75dp"
                        android:layout_height="match_parent"
                        android:layout_below="@+id/line"
                        android:fontFamily="@font/featherbold"
                        android:padding="10dp"
                        android:text="Date"
                        android:gravity="center"
                        android:textAlignment="center"
                        android:textColor="#584E3D"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/des"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/line"
                        android:background="@drawable/tableitem"
                        android:fontFamily="@font/featherbold"
                        android:padding="10dp"
                        android:text="Description"
                        android:textAlignment="center"
                        android:textColor="#584E3D"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/vet"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_below="@+id/line"
                        android:background="@drawable/tableitem"
                        android:fontFamily="@font/featherbold"
                        android:padding="10dp"
                        android:text="Vet"
                        android:textAlignment="center"
                        android:textColor="#584E3D"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/diag"
                        android:layout_width="105dp"
                        android:layout_height="match_parent"
                        android:layout_below="@+id/line"
                        android:fontFamily="@font/featherbold"
                        android:padding="10dp"
                        android:text="Diagnosis"
                        android:textAlignment="center"
                        android:textColor="#584E3D"
                        android:textSize="15sp" />
                </TableRow>

                <TableRow
                    android:layout_width="328dp"
                    android:id="@+id/tabrow"
                    android:layout_height="wrap_content"
                    android:background="@drawable/tabcorner">

                    <TextView
                        android:id="@+id/datetext"
                        android:layout_width="75dp"
                        android:layout_height="match_parent"
                        android:layout_below="@+id/line"
                        android:fontFamily="@font/featherbold"
                        android:padding="10dp"
                        android:gravity="center"
                        android:text= "N/A"
                        android:textAlignment="center"
                        android:textColor="#584E3D"
                        android:textSize="15dp" />

                    <TextView
                        android:id="@+id/destext"
                        android:layout_width="75dp"
                        android:layout_height="match_parent"
                        android:layout_below="@+id/line"
                        android:background="@drawable/tableitem"
                        android:fontFamily="@font/featherbold"
                        android:padding="10dp"
                        android:text="N/A"
                        android:textAlignment="center"
                        android:textColor="#584E3D"
                        android:textSize="15dp" />

                    <TextView
                        android:id="@+id/vettext"
                        android:layout_width="67dp"
                        android:layout_height="match_parent"
                        android:layout_below="@+id/line"
                        android:background="@drawable/tableitem"
                        android:fontFamily="@font/featherbold"
                        android:padding="10dp"
                        android:text="N/A"
                        android:textAlignment="center"
                        android:textColor="#584E3D"
                        android:textSize="15dp" />

                    <TextView
                        android:id="@+id/diagtext"
                        android:layout_width="95dp"
                        android:layout_height="match_parent"
                        android:layout_below="@+id/line"
                        android:fontFamily="@font/featherbold"
                        android:padding="10dp"
                        android:text = "N/A"
                        android:textAlignment="center"
                        android:textColor="#584E3D"
                        android:textSize="15dp" />
                </TableRow>
            </TableLayout>

            <Button
                android:id="@+id/addrecord"
                android:layout_width="340dp"
                android:layout_height="53dp"
                android:layout_below="@id/tblayout"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="35dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="30dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/addrecord_btn"
                android:drawablePadding="10dp"
                android:fontFamily="@font/normal"
                android:textColor="#FFFF"
                android:textSize="20dp" />


            <Button
                android:id="@+id/export_profile"
                android:layout_width="340dp"
                android:layout_height="53dp"
                android:layout_below="@id/addrecord"
                android:layout_centerInParent="true"
                android:layout_marginStart="35dp"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="30dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/showqrcode"
                android:drawablePadding="10dp"
                android:fontFamily="@font/normal"
                android:padding="15dp"
                android:textColor="#FFFF"
                android:textSize="20dp" />

            <Button
                android:id="@+id/deletedog"
                android:layout_width="340dp"
                android:layout_height="53dp"
                android:layout_below="@id/export_profile"
                android:layout_centerInParent="true"
                android:layout_marginStart="35dp"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="30dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/deletedog"
                android:drawablePadding="10dp"
                android:fontFamily="@font/normal"
                android:padding="15dp" />



        </RelativeLayout>
    </ScrollView>

</LinearLayout>