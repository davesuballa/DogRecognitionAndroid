        android:layout_marginTop="110dp"
        android:layout_marginEnd="25dp"
        android:text="Where is the hair loss?"
        android:textColor="#87765B"
        android:visibility="gone"
        android:textSize="15dp"
        android:textStyle="bold"/>
    <Button
        android:id="@+id/ch1ch5"
        android:layout_width="355dp"
        android:layout_height="wrap_content"
        android:layout_below = "@id/questionchoice5"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/dogchat"
        android:visibility="gone"
        android:textAllCaps="false"
        android:padding="10dp"
        android:fontFamily="@font/featherbold"
        android:text="Near the base of the tail or around the head/neck"
        android:textColor="#807561"
        android:textSize="16dp" />
    <Button
        android:id="@+id/ch2ch5"
        android:layout_width="355dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-10dp"
        android:layout_below="@+id/ch1ch5"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/dogchat"
        android:visibility="gone"
        android:textAllCaps="false"
        android:padding="10dp"
        android:fontFamily="@font/featherbold"
        android:text="On the trunk, on both sides of spine, or near hip area on both sides"
        android:textColor="#807561"
        android:textSize="16dp" />
    <Button
        android:id="@+id/ch3ch5"
        android:layout_width="355dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ch2ch5"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/dogchat"
        android:visibility="gone"
        android:textAllCaps="false"
        android:padding="10dp"
        android:fontFamily="@font/featherbold"
        android:text="All over or other areas"
        android:textColor="#807561"
        android:textSize="16dp" />

    <Button
        android:id="@+id/ch4ch5"
        android:layout_width="355dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-10dp"
        android:layout_marginEnd="30dp"
        android:layout_below="@+id/ch3ch5"
        android:layout_marginBottom="20dp"
        android:background="@drawable/dogchat"
        android:visibility="gone"
        android:textAllCaps="false"
        android:padding="10dp"
        android:fontFamily="@font/featherbold"
        android:text="All over or other areas"
        android:textColor="#807561"
        android:textSize="16dp" />
    <Button
        android:id="@+id/ch5ch5"
        android:layout_width="355dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/ch4ch5"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-10dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="45dp"
        android:background="@drawable/dogchat"
        android:drawablePadding="1dp"
        android:fontFamily="@font/featherbold"
        android:text="Patchy spots in different areas of the body"
        android:visibility="gone"
        android:textColor="#807561"
        android:padding="10dp"
        android:textAllCaps="false"
        android:textSize="16dp" />
</RelativeLayout>