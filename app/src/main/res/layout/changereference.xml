<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FEFAF5"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ChangeGender">

    <Button
        android:id="@+id/backbtn"
        android:layout_width="25dp"
        android:layout_height="20dp"
        android:layout_marginStart="25dp"
        android:background="@drawable/arrow"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.051" />

    <Button
        android:id="@+id/btn_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:background="#00000000"
        android:fontFamily="@font/normal"
        android:text="SAVE"
        android:textColor="#9B8768"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.038" />

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_below="@+id/btn_save"
        android:layout_centerHorizontal="true"
        android:background="#D9CCBC"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.105" />

    <LinearLayout
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:id="@+id/linear"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/called"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:fontFamily="@font/featherbold"
                android:gravity="center"
                android:text="Change your Preference"
                android:textColor="#584E3D"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                tools:layout_editor_absoluteY="270dp" />

            <Button
                android:id="@+id/dad"
                android:layout_width="150dp"
                android:layout_height="150dp"

                android:layout_below="@id/called"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="30dp"
                android:background="@drawable/dad"
                tools:layout_editor_absoluteX="206dp"
                tools:layout_editor_absoluteY="310dp" />

            <TextView
                android:id="@+id/daddy"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/dad"
                android:layout_alignParentEnd="true"
                android:fontFamily="@font/featherbold"
                android:gravity="center"
                android:text="DADDY"
                android:textColor="#584E3D"
                android:textSize="21sp"
                tools:layout_editor_absoluteX="211dp"
                tools:layout_editor_absoluteY="473dp" />

            <Button
                android:id="@+id/mom"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_below="@id/called"
                android:layout_marginTop="30dp"
                android:background="@drawable/mom"
                tools:layout_editor_absoluteX="40dp"
                tools:layout_editor_absoluteY="310dp" />

            <TextView
                android:id="@+id/mommy"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/mom"
                android:layout_marginEnd="24dp"
                android:fontFamily="@font/featherbold"
                android:gravity="center"
                android:text="MOMMY"
                android:textColor="#584E3D"
                android:textSize="21sp"
                app:layout_constraintEnd_toStartOf="@+id/daddy"
                tools:layout_editor_absoluteY="473dp" />
        </RelativeLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>