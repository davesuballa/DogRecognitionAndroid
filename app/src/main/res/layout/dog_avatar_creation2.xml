<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".dog_avatar_creation"
    android:theme="@style/Theme.AppCompat.DayNight.NoActionBar"
    android:background="@drawable/gradientbg">

    <TextView
        android:id="@+id/breed"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_below="@+id/bg"
        android:layout_marginTop="8dp"
        android:layout_alignParentStart="true"
        android:layout_alignBottom="@+id/tablyt"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="50dp"
        android:background="@drawable/breed_2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/furtab"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/bg"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/fur_color"/>

    <TextView
        android:id="@+id/accessory"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginTop="8dp"
        android:layout_below="@+id/bg"
        android:background="@drawable/accessories"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonskip"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="15dp"
        android:layout_alignParentEnd="true"
        android:layout_above="@+id/bg"
        android:layout_marginBottom="-90dp"
        android:background="#00000000"
        android:fontFamily="@font/normal"
        android:text="DONE"
        android:textColor="#9D8968"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/bg"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_alignParentStart="true"
        android:layout_marginTop="100dp"
        android:background="#D9CCBC"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/line"
        android:layout_height="3dp"
        android:layout_width="match_parent"
        android:layout_marginTop="510dp"
        android:layout_centerHorizontal="true"
        android:background="#D9CCBC"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/gretriever"
        android:layout_width="320dp"
        android:layout_height="320dp"
        android:layout_marginTop="128dp"
        android:background="@drawable/golden6"
        android:visibility="invisible"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/shitzu"
        android:layout_width="320dp"
        android:layout_height="320dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="128dp"
        android:background="@drawable/shitzu6"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/pomeranian"
        android:layout_width="320dp"
        android:layout_height="320dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="128dp"
        android:background="@drawable/pomeranian1fb"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/chihuahua"
        android:layout_width="320dp"
        android:layout_height="320dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="128dp"
        android:background="@drawable/chihuahua1"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="@+id/bg"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/poodle"
        android:layout_width="320dp"
        android:layout_height="320dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="128dp"
        android:background="@drawable/poodle5"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="@+id/bg"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tablyt"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:tabMode="fixed"
        android:layout_below="@+id/bg"
        app:tabGravity="fill"
        app:tabIndicator="@drawable/tab_indicator_selected"
        app:layout_constraintTop_toBottomOf="@+id/bg"
        app:tabSelectedTextColor="@color/white">



        <com.google.android.material.tabs.TabItem
            android:id="@+id/tabIt3m"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:drawablePadding="10dp"/>


        <com.google.android.material.tabs.TabItem
            android:id="@+id/tabitem2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <com.google.android.material.tabs.TabItem
            android:id="@+id/tabitem3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </com.google.android.material.tabs.TabLayout>

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewPager2"
        android:layout_width="match_parent"
        android:layout_below="@+id/tablyt"
        android:layout_height="match_parent"
        app:flow_horizontalBias="0.5"/>


</RelativeLayout>