<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FEFAF5">


    <TextView
        android:id="@+id/headicon"
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:layout_marginTop="100dp"
        android:layout_marginStart="25dp"
        android:background="@drawable/head_icon" />

    <TextView
        android:id="@+id/text1"
        android:layout_below="@+id/headicon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="25dp"
        android:fontFamily="@font/featherbold"
        android:text="Hi Parent, \nI can help you learn \n ore about dog's health"
        android:textColor="#584E3D"
        android:textSize="18sp"
        android:textStyle="bold" />



    <Button
        android:id="@+id/symptom_checker"
        android:layout_below="@+id/text1"
        android:layout_width="365dp"
        android:layout_height="155dp"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="25dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="25dp"
        android:background="@drawable/symptom_checker_btn" />

    <Button
        android:id="@+id/weight_checker"
        android:layout_width="364dp"
        android:layout_height="155dp"
        android:layout_below="@+id/symptom_checker"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="25dp"
        android:layout_marginTop="11dp"
        android:layout_marginEnd="25dp"
        android:background="@drawable/weight_checker_btn" />



    <Button
        android:id="@+id/camera"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="25dp"
        android:layout_marginTop="210dp"
        android:layout_marginBottom="85dp"
        android:layout_marginEnd="25dp"
        android:background="@drawable/camicon" />

    <Button
        android:id="@+id/homepage"
        android:layout_width="45dp"
        android:layout_height="35dp"
        android:layout_alignBottom="@+id/navbar"
        android:layout_marginBottom="30dp"
        android:layout_alignStart="@+id/navbar"
        android:layout_marginEnd="25dp"
        android:layout_marginStart="20dp"
        android:background="@drawable/homepage2" />
    <Button
        android:id="@+id/calendar"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignStart="@+id/homepage"
        android:layout_alignBottom="@+id/navbar"
        android:layout_marginBottom="30dp"
        android:layout_marginStart="70dp"
        android:layout_marginEnd="25dp"
        android:background="@drawable/calendar_page3" />
    <Button
        android:id="@+id/healthtools"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignBottom="@+id/navbar"
        android:layout_alignEnd="@+id/profile"
        android:layout_marginBottom="30dp"
        android:layout_marginEnd="65dp"
        android:background="@drawable/health2" />
    <Button
        android:id="@+id/profile"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignBottom="@+id/navbar"
        android:layout_alignEnd="@+id/navbar"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/profile_page2" />

    <Button
        android:id="@+id/navbar"
        android:layout_width="353dp"
        android:layout_height="92dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="25dp"
        android:layout_marginTop="267dp"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="25dp"
        android:background="@drawable/navbar"
        android:enabled="false" />

</RelativeLayout>
