<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/gradientbg">


    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="320dp"
        android:layout_height="15dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="53dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:progressDrawable="@drawable/progressbar"/>

    <LinearLayout
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <RelativeLayout
            android:id="@+id/linear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
    <TextView
        android:id="@+id/called"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:fontFamily="@font/featherbold"
        android:gravity="center"
        android:text="What should I call you?"
        android:textColor="#584E3D"
        android:textSize="24sp"
        android:textStyle="bold" />

    <Button
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/mom"
        android:layout_below="@id/called"
        android:layout_marginTop="30dp"
        android:background="@drawable/mom" />

    <TextView
        android:id="@+id/mommy"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/mom"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/featherbold"
        android:gravity="center"
        android:text="MOMMY"
        android:textColor="#584E3D"
        android:textSize="21sp" />

    <TextView
        android:id="@+id/daddy"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/dad"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/featherbold"
        android:gravity="center"
        android:text="DADDY"
        android:textColor="#584E3D"
        android:textSize="21sp" />

    <Button
        android:id="@+id/dad"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_below="@id/called"
        android:layout_marginTop="30dp"
        android:layout_alignParentEnd="true"
        android:background="@drawable/dad" />

        </RelativeLayout>
    </LinearLayout>
    <Button
        android:id="@+id/next"
        android:layout_width="340dp"
        android:layout_height="53dp"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="30dp"
        android:background="@drawable/next_button" />

</androidx.constraintlayout.widget.ConstraintLayout>