<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FEFAF5">

    <Button
        android:id="@+id/backbtn"
        android:layout_width="25dp"
        android:layout_height="20dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/arrow"/>

    <Button
        android:id="@+id/btn_confirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="38dp"
        android:layout_marginEnd="20dp"
        android:background="#00000000"
        android:fontFamily="@font/normal"
        android:text="CONFIRM"
        android:textColor="#9B8768"
        android:textSize="20sp" />


    <View
        android:id="@+id/line"
        android:layout_below="@+id/btn_confirm"
        android:layout_height="3dp"
        android:layout_width="match_parent"
        android:layout_marginTop="13dp"
        android:layout_centerHorizontal="true"
        android:background="#D9CCBC" />

    <TextView
        android:id="@+id/description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/featherbold"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:text="To delete your account, please enter your email and password for confirmation."
        android:textSize="20dp"
        android:layout_marginStart="35dp"
        android:textColor="#BAB7B7"
        android:layout_below="@id/line"
        android:layout_marginTop="20dp" />

    <TextView
        android:id="@+id/text_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/featherbold"
        android:text="Email"
        android:textSize="20dp"
        android:layout_marginStart="35dp"
        android:textColor="#BAB7B7"
        android:layout_below="@id/description"
        android:layout_marginTop="20dp" />

    <EditText
        android:id="@+id/edit_email"
        android:layout_width="375dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="35dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/text_password"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/roundedgray"
        android:drawablePadding="10dp"
        android:textColor="#B1B1B1"
        android:fontFamily="@font/featherbold"
        android:padding="15dp"/>
    <TextView
        android:id="@+id/text_newpassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/featherbold"
        android:text="Password"
        android:textSize="20dp"
        android:layout_marginStart="35dp"
        android:textColor="#BAB7B7"
        android:layout_below="@id/edit_email"
        android:layout_marginTop="10dp" />

    <EditText
        android:id="@+id/edit_password"
        android:layout_width="375dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="35dp"
        android:layout_below="@+id/text_newpassword"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/roundedgray"
        android:drawablePadding="10dp"
        android:layout_centerHorizontal="true"
        android:inputType="textPassword"
        android:textColor="#BAB7B7"
        android:fontFamily="@font/featherbold"
        android:padding="15dp"/>

    <Button
        android:id="@+id/eye2"
        android:layout_width="35dp"
        android:layout_height="25dp"
        android:layout_alignTop="@+id/edit_password"
        android:layout_alignBottom="@+id/edit_password"
        android:layout_marginTop="13dp"
        android:layout_marginBottom="13dp"
        android:layout_alignEnd="@+id/edit_password"
        android:layout_marginEnd="20dp"
        android:background="@drawable/eyecancel"/>


</RelativeLayout>