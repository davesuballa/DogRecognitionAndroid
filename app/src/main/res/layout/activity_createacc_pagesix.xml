<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradientbg"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".createacc_pagesix">

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="320dp"
        android:layout_height="15dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="53dp"
        android:progressDrawable="@drawable/progressbar" />

    <!-- Dropdown list design -->

    <TextView
        android:id="@+id/question1"
        android:layout_width="350dp"
        android:layout_height="54dp"
        android:layout_above="@+id/breed_spinner"
        android:layout_centerInParent="true"
        android:fontFamily="@font/featherbold"
        android:gravity="center"
        android:text="What is the breed of your dog?"
        android:textColor="#584E3D"
        android:textSize="21sp"
        android:textStyle="bold" />

    <Spinner
        android:id="@+id/breed_spinner"
        style="@style/SpinnerStyle"
        android:layout_width="350dp"
        android:layout_height="61dp"
        android:layout_centerInParent="true"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="20dp"
        android:dropDownVerticalOffset="65dp"
        android:paddingStart="18dp"
        android:paddingEnd="18dp"
        android:spinnerMode="dropdown" />

    <!-- Next button -->
    <Button
        android:id="@+id/next"
        android:layout_width="340dp"
        android:layout_height="53dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp"
        android:background="@drawable/next_button" />

</RelativeLayout>
