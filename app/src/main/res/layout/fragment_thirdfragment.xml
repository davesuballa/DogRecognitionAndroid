<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".thirdfragment"
    android:background="#00000000"
    android:orientation="vertical"
    android:theme="@style/Theme.AppCompat.Light.NoActionBar">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never"
        android:scrollbars="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <TextView
        android:id="@+id/breedtext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="30dp"
        android:fontFamily="@font/normal"
        android:text="Accessories"
        android:textStyle="bold"
        android:textColor="#584E3D"
        android:textSize="21sp" />

    <TextView
        android:id="@+id/colar1txt"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="15dp"
        android:layout_marginStart="20dp"
        android:layout_below="@+id/breedtext"
        android:background="@drawable/acc6"
        android:contentDescription="awhabhas"
        android:textColor="@color/black"
        android:textSize="24sp" />

    <Button
        android:id="@+id/colar1fragment"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="15dp"
        android:layout_marginStart="20dp"
        android:layout_below="@+id/breedtext"
        android:background="#00000000"
        android:textColor="@color/black"
        android:textSize="24sp" />


    <TextView
        android:id="@+id/colar2txt"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="15dp"
        android:layout_marginStart="145dp"
        android:layout_below="@+id/breedtext"
        android:background="@drawable/acc5"
        android:contentDescription="awhabhas"
        android:textColor="@color/black"
        android:textSize="24sp" />
    <Button
        android:id="@+id/colar2"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="15dp"
        android:layout_marginStart="145dp"
        android:layout_below="@+id/breedtext"
        android:background="#00000000"
        android:textColor="@color/black"
        android:textSize="24sp" />


    <TextView
        android:id="@+id/scarf1txt"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="15dp"
        android:layout_marginStart="270dp"
        android:layout_below="@+id/breedtext"
        android:background="@drawable/acc2"
        android:textColor="@color/black"
        android:textSize="24sp" />
    <Button
        android:id="@+id/scarf1"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="15dp"
        android:layout_marginStart="270dp"
        android:layout_below="@+id/breedtext"
        android:background="#00000000"
        android:textColor="@color/black"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/scarf2txt"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="15dp"
        android:layout_marginStart="20dp"
        android:layout_below="@+id/colar1fragment"
        android:background="@drawable/acc1"
        android:contentDescription="awhabhas"
        android:textColor="@color/black"
        android:textSize="24sp" />
    <Button
        android:id="@+id/scarf2"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="15dp"
        android:layout_marginStart="20dp"
        android:layout_below="@+id/colar1fragment"
        android:background="#00000000"
        android:textColor="@color/black"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/ribbon1txt"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="15dp"
        android:layout_marginStart="145dp"
        android:layout_below="@+id/colar2"
        android:background="@drawable/acc4"
        android:contentDescription="awhabhas"
        android:textColor="@color/black"
        android:textSize="24sp" />
    <Button
        android:id="@+id/ribbon1"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="15dp"
        android:layout_marginStart="145dp"
        android:layout_below="@+id/colar2"
        android:background="#00000000"
        android:textColor="@color/black"
        android:textSize="24sp" />


    <TextView
        android:id="@+id/ribbon2txt"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="15dp"
        android:layout_marginStart="270dp"
        android:layout_below="@+id/scarf1"
        android:background="@drawable/acc3"
        android:textColor="@color/black"
        android:textSize="24sp" />
    <Button
        android:id="@+id/ribbon2"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="15dp"
        android:layout_marginStart="270dp"
        android:layout_below="@+id/scarf1"
        android:background="#00000000"
        android:textColor="@color/black"
        android:textSize="24sp" />

    </RelativeLayout>
    </ScrollView>

</LinearLayout>