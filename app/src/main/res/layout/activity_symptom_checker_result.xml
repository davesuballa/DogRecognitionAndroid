<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".symptom_checker_result"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FEFAF5">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never"
        android:scrollbars="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:id="@+id/cardview"
                android:layout_width="360dp"
                android:layout_height="359dp"
                android:layout_below="@+id/symptomcheck"
                android:layout_alignBottom="@+id/symptomremindertext"
                android:layout_centerInParent="true"
                android:layout_marginTop="131dp"
                android:layout_marginBottom="-20dp"
                android:background="@drawable/box1"
                app:cardBackgroundColor="#FDF9F4"
                app:cardCornerRadius="20dp"
                app:cardElevation="5dp">

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/mcpaw"
                android:layout_width="108dp"
                android:layout_height="110dp"
                android:layout_above="@+id/cardview"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="25dp"
                android:layout_marginBottom="-157dp"
                android:background="@drawable/mc_paws"
                android:elevation="12dp" />
    <TextView
        android:id="@+id/symptomcheck"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/featherbold"
        android:layout_marginStart="25dp"
        android:layout_marginTop="50dp"
        android:text="Symptom Checker"
        android:textColor="#87765B"
        android:textSize="20dp" />


            <TextView
                android:id="@+id/symptomreminder"
                android:layout_width="357dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/symptomcheck"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="25dp"
                android:layout_marginTop="160dp"
                android:elevation="11dp"
                android:fontFamily="@font/featherbold"
                android:text="Unidentified"
                android:textAlignment="center"
                android:textColor="#F9F9F9"
                android:textSize="32sp" />


            <TextView
                android:id="@+id/symptomremindertext"
                android:layout_width="315dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/symptomreminder"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="25dp"
                android:layout_marginTop="25dp"
                android:elevation="11dp"
                android:fontFamily="@font/featherbold"
                android:text="No information available"
                android:textAlignment="textStart"
                android:textColor="#5D523B"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/box1"
                android:layout_width="360dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/symptomcheck"
                android:layout_alignBottom="@+id/symptomreminder"
                android:layout_centerInParent="true"
                android:layout_marginTop="130dp"
                android:layout_marginBottom="-10dp"
                android:background="@drawable/resultcorner"
                android:elevation="10dp"
                android:outlineProvider="none"
                android:padding="20dp" />


            <androidx.cardview.widget.CardView
                android:id="@+id/cardview2"
                android:layout_width="360dp"
                android:layout_height="427dp"
                android:layout_below="@+id/cardview"
                android:layout_alignBottom="@+id/symptomwhattoexpecttext"
                android:layout_centerInParent="true"
                android:layout_marginTop="45dp"
                android:layout_marginBottom="-20dp"
                android:background="@drawable/box1"
                app:cardBackgroundColor="#FDF9F4"
                app:cardCornerRadius="20dp"
                app:cardElevation="4dp">

            </androidx.cardview.widget.CardView>



    <TextView
        android:id="@+id/symptomvetquestion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/featherbold"
        android:layout_marginStart="25dp"
        android:layout_marginTop="65dp"
        android:layout_below="@+id/cardview2"
        android:text="Question to ask your vet"
        android:layout_centerHorizontal="true"
        android:textColor="#F9F9F9"
        android:textSize="25dp"
        android:elevation="11dp"/>


    <TextView
        android:id="@+id/symptomvetquestiontext"
        android:layout_width="322dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/symptomvetquestion"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="25dp"
        android:layout_marginTop="25dp"
        android:elevation="11dp"
        android:fontFamily="@font/featherbold"
        android:text="No information available"
        android:textAlignment="textStart"
        android:textColor="#5D523B"
        android:textSize="15dp" />

            <TextView
                android:id="@+id/box2"
                android:layout_width="360dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/cardview"
                android:layout_alignBottom="@+id/symptomwhattoexpect"
                android:layout_centerInParent="true"
                android:layout_marginTop="45dp"
                android:layout_marginBottom="-10dp"
                android:background="@drawable/resultcorner"
                android:elevation="11dp"
                android:outlineProvider="none" />

            <androidx.cardview.widget.CardView
                android:id="@+id/cardview3"
                android:layout_width="358dp"
                android:layout_height="427dp"
                android:layout_below="@+id/cardview2"
                android:layout_alignBottom="@+id/symptomvetquestiontext"
                android:layout_centerInParent="true"
                android:layout_marginTop="45dp"
                android:layout_marginBottom="-20dp"
                android:background="@drawable/box1"
                app:cardBackgroundColor="#FDF9F4"
                app:cardCornerRadius="20dp"
                app:cardElevation="4dp">

            </androidx.cardview.widget.CardView>



    <TextView
        android:id="@+id/symptomwhattoexpect"
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/featherbold"
        android:layout_marginStart="25dp"
        android:layout_marginTop="55dp"
        android:layout_marginBottom="20dp"
        android:layout_below="@+id/cardview"
        android:text="What to expect at your vet Possible next step:"
        android:layout_centerHorizontal="true"
        android:textColor="#F9F9F9"
        android:textSize="25dp"
        android:textAlignment="center"
        android:elevation="11dp"/>


    <TextView
        android:id="@+id/symptomwhattoexpecttext"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/symptomwhattoexpect"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:elevation="11dp"
        android:fontFamily="@font/featherbold"
        android:text="No information available"
        android:textAlignment="textStart"
        android:textColor="#5D523B"
        android:textSize="15dp" />

            <TextView
                android:id="@+id/box3"
                android:layout_width="361dp"
                android:layout_height="72dp"
                android:layout_below="@+id/cardview2"
                android:layout_alignBottom="@id/symptomvetquestion"
                android:layout_centerInParent="true"
                android:layout_marginTop="45dp"
                android:layout_marginBottom="-10dp"
                android:background="@drawable/resultcorner"
                android:elevation="10dp"
                android:outlineProvider="none" />

            <TextView
                android:id="@+id/symptomcanineemergency"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/cardview3"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="45dp"
                android:layout_marginTop="65dp"
                android:elevation="13dp"
                android:fontFamily="@font/featherbold"
                android:text="Canine Emergency Care"
                android:textColor="#F9F9F9"
                android:textSize="25dp" />


            <TextView
                android:id="@+id/symptomcanineemergencytext"
                android:layout_width="322dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/symptomcanineemergency"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="25dp"
                android:layout_marginTop="30dp"
                android:elevation="13dp"
                android:textIsSelectable="true"
                android:autoLink="all"
                android:fontFamily="@font/featherbold"
                android:text="No information available"
                android:textAlignment="textStart"
                android:textColor="#5D523B"
                android:textSize="15dp" />

    <TextView
        android:id="@+id/box4"
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/symptomcanineemergency"
        android:layout_below="@+id/cardview3"
        android:layout_centerInParent="true"
        android:layout_marginTop="45dp"
        android:layout_marginBottom="-15dp"
        android:background="@drawable/resultcorner"
        android:outlineProvider="none"
        android:elevation="12dp" />

            <androidx.cardview.widget.CardView
                android:id="@+id/cardview4"
                android:layout_width="360dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/cardview3"
                android:layout_alignBottom="@+id/symptomcanineemergencytext"
                android:layout_centerInParent="true"
                android:layout_marginTop="45dp"
                android:layout_marginBottom="-20dp"
                android:background="@drawable/box1"
                app:cardBackgroundColor="#FDF9F4"
                app:cardCornerRadius="20dp"
                app:cardElevation="10dp">

            </androidx.cardview.widget.CardView>

            <Button
                android:id="@+id/go_back_button"
                android:layout_width="340dp"
                android:layout_height="47dp"
                android:layout_below="@+id/cardview4"
                android:layout_centerInParent="true"
                android:layout_marginTop="45dp"
                android:layout_marginEnd="30dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/goback_btn"
                android:drawablePadding="10dp"
                android:padding="15dp" />


        </RelativeLayout>
    </ScrollView>

</LinearLayout>
