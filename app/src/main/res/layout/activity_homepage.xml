<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".homepageold"
    android:background="#FEFAF5">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/profileRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_below="@id/text2"
        android:layout_marginStart="15dp"
        android:padding="8dp" />

    <TextView
        android:id="@+id/text1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="25dp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="25dp"
        android:fontFamily="@font/featherbold"
        android:text="Good day, FUR PARENT!"
        android:textColor="#584E3D"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/text2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text1"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:fontFamily="@font/normal"
        android:text="Start checking your babies."
        android:textColor="#584E3D"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/profileicon"
        android:layout_below="@+id/text2"
        android:layout_width="60sp"
        android:layout_height="60sp"
        android:visibility="invisible"
        android:layout_marginTop="17dp"
        android:layout_marginStart="25dp"
        android:background="@drawable/profile" />

    <Button
        android:id="@+id/add_dog_profile"
        android:layout_below="@+id/text2"
        android:layout_width="60sp"
        android:layout_height="60dp"
        android:layout_marginTop="17dp"
        android:layout_marginStart="100dp"
        android:visibility="invisible"
        android:background="@drawable/add_dog_profile" />
    <TextView
        android:id="@+id/name1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/add_dog_profile"
        android:layout_marginStart="25sp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="325dp"
        android:gravity="center"
        android:fontFamily="@font/normal"
        android:text="Name"
        android:visibility="invisible"
        android:textColor="#9C8868"
        android:textSize="14sp"
        android:textAllCaps="true"/>
    <TextView
        android:id="@+id/add"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/add_dog_profile"
        android:layout_marginStart="100dp"
        android:visibility="invisible"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="250dp"
        android:gravity="center"
        android:fontFamily="@font/normal"
        android:text="add"
        android:textColor="#9C8868"
        android:textSize="14sp"
        android:textAllCaps="true"/>


    <TextView
        android:id="@+id/dog_profile_arrow"
        android:layout_width="19dp"
        android:layout_height="25dp"
        android:layout_below="@+id/box1"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="30dp"
        android:layout_alignEnd="@+id/card"
        android:background="@drawable/arrow2"
        android:elevation="10dp" />

    <TextView
        android:id="@+id/box1"
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:outlineProvider="none"
        android:layout_alignStart="@+id/card"
        android:layout_alignEnd="@+id/card"
        android:layout_alignTop="@+id/card"
        android:layout_centerHorizontal="true"
        android:background="@drawable/resultcorner"
        android:elevation="30dp" />

    <TextView
        android:id="@+id/nickname"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/box1"
        android:layout_alignStart="@+id/card"
        android:layout_marginStart="30dp"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="60dp"
        android:elevation="31dp"
        android:fontFamily="@font/featherbold"
        android:text="Nickname"
        android:textColor="#584E3D"
        android:textSize="25sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/dogicon"
        android:layout_width="25dp"
        android:layout_below="@+id/nickname"
        android:layout_height="25dp"
        android:layout_alignTop="@+id/dog_breedname"
        android:layout_alignStart="@+id/card"
        android:layout_marginStart="46dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/breed_icon"
        android:elevation="31dp" />

    <TextView
        android:id="@+id/dog_breed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/dogicon"
        android:layout_below="@+id/dog_breedname"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="60dp"
        android:elevation="31dp"
        android:fontFamily="@font/featherbold"
        android:text="Breed"
        android:textColor="#584E3D"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/dog_breedname"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nickname"
        android:layout_toEndOf="@+id/dogicon"
        android:layout_marginStart="0dp"
        android:layout_marginTop="20dp"
        android:elevation="31dp"
        android:fontFamily="@font/featherbold"
        android:text="N/A"
        android:textColor="#584E3D"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/sexicon"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignStart="@+id/card"
        android:layout_below="@+id/dogicon"
        android:layout_alignTop="@+id/dog_sexname"
        android:layout_marginStart="46dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/sex_icon"
        android:elevation="31dp" />

    <TextView
        android:id="@+id/dog_sexname"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dog_breed"
        android:layout_marginStart="0dp"
        android:layout_toEndOf="@+id/sexicon"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="0dp"
        android:elevation="31dp"
        android:fontFamily="@font/featherbold"
        android:text="N/A"
        android:textColor="#584E3D"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/dog_sex"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dog_sexname"
        android:layout_marginStart="0dp"
        android:layout_toEndOf="@+id/sexicon"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        android:elevation="31dp"
        android:fontFamily="@font/featherbold"
        android:text="Sex"
        android:textColor="#584E3D"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/weighticon"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignStart="@+id/card"
        android:layout_below="@+id/sexicon"
        android:layout_marginStart="46dp"
        android:layout_alignTop="@+id/dog_weightname"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/weight_icon"
        android:elevation="31dp"/>

    <TextView
        android:id="@+id/dog_weightname"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/weighticon"
        android:layout_marginStart="0dp"
        android:layout_below="@+id/sexicon"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="60dp"
        android:elevation="31dp"
        android:fontFamily="@font/featherbold"
        android:text="N/A"
        android:textColor="#584E3D"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/dog_weight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dog_weightname"
        android:layout_toEndOf="@+id/weighticon"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        android:elevation="31dp"
        android:fontFamily="@font/featherbold"
        android:text="Weight"
        android:textColor="#584E3D"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/bdayicon"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_below="@+id/nickname"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@id/dog_breedname"
        android:layout_alignTop="@+id/dog_bdayname"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/bday_icon"
        android:elevation="31dp"/>


    <TextView
        android:id="@+id/dog_bdayname"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="0dp"
        android:layout_toEndOf="@id/bdayicon"
        android:layout_below="@+id/nickname"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="0dp"
        android:elevation="31dp"
        android:fontFamily="@font/featherbold"
        android:text="N/A"
        android:textColor="#584E3D"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/dog_bday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dog_bdayname"
        android:layout_toEndOf="@+id/bdayicon"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="60dp"
        android:elevation="31dp"
        android:fontFamily="@font/featherbold"
        android:text="Birthdate"
        android:textColor="#584E3D"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/dog_ageicon"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_below="@+id/bdayicon"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@+id/dog_sexname"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="10dp"
        android:layout_alignTop="@+id/dog_agename"
        android:background="@drawable/age_icon"
        android:elevation="31dp" />

    <TextView
        android:id="@+id/dog_age"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dog_agename"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:layout_toEndOf="@+id/dog_ageicon"
        android:layout_marginEnd="60dp"
        android:elevation="31dp"
        android:fontFamily="@font/featherbold"
        android:text="Age"
        android:textColor="#584E3D"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/dog_agename"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/dog_ageicon"
        android:layout_marginStart="0dp"
        android:layout_marginTop="20dp"
        android:layout_below="@id/dog_bday"
        android:layout_marginEnd="0dp"
        android:elevation="21dp"
        android:fontFamily="@font/featherbold"
        android:text="N/A"
        android:textColor="#584E3D"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/card"
        android:layout_width="350dp"
        android:layout_height="300dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/add"
        android:layout_marginBottom="-30dp"
        android:layout_marginTop="4dp"
        android:elevation="7dp"
        android:outlineProvider="background"
        android:background="@drawable/cardbox"
        app:cardCornerRadius="20dp"
        app:cardBackgroundColor="#FEFAF5"/>



    <Button
        android:id="@+id/camera"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="25dp"
        android:layout_marginTop="210dp"
        android:layout_marginBottom="85dp"
        android:layout_marginEnd="25dp"
        android:background="@drawable/camicon" />

    <Button
        android:id="@+id/homepage"
        android:layout_width="45dp"
        android:layout_height="35dp"
        android:layout_alignBottom="@+id/navbar"
        android:layout_marginBottom="30dp"
        android:layout_alignStart="@+id/navbar"
        android:layout_marginEnd="25dp"
        android:layout_marginStart="20dp"
        android:background="@drawable/homepage2" />
    <Button
        android:id="@+id/calendar"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignStart="@+id/homepage"
        android:layout_alignBottom="@+id/navbar"
        android:layout_marginBottom="30dp"
        android:layout_marginStart="70dp"
        android:layout_marginEnd="25dp"
        android:background="@drawable/calendar_page3" />
    <Button
        android:id="@+id/healthtools"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignBottom="@+id/navbar"
        android:layout_alignEnd="@+id/profile"
        android:layout_marginBottom="30dp"
        android:layout_marginEnd="65dp"
        android:background="@drawable/health2" />
    <Button
        android:id="@+id/profile"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignBottom="@+id/navbar"
        android:layout_alignEnd="@+id/navbar"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/profile_page2" />

    <Button
        android:id="@+id/navbar"
        android:layout_width="353dp"
        android:layout_height="92dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="25dp"
        android:layout_marginTop="267dp"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="25dp"
        android:background="@drawable/navbar"
        android:enabled="false" />


</RelativeLayout>